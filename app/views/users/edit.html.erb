<% content_for :title do %>
    Editing User: <%= @user.name %>
<% end %>

<%= render 'form' %>

Discard changes and:
<%= link_to 'Display User', @user %>

<div id="list_course">
  <h4 class="box_title">Your Courses:</h4>
  <div class="box_content">
    <% if @user.courses.count > 0 %>
      <% @user.courses.each do |c| %>
        <li>
            <%= c.name.to_s%>:
            <%= link_to "Edit (modify roster)", edit_user_course_path(c.user_id, c.id) %> |
            <td><%= link_to 'Delete Course', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </li>
      <% end %>
    <% else %>
      No courses present for <%= @user.name%>
    <% end %>
  </div>
</div>


<div id="add_course">
  <h4 class="box_title">Add a course:</h4>
  <div class="box_content"  id="new_course_container">
    <%= form_for([@user, @user.courses.build], :html=> {:multipart=>true}) do |f| %>
      <% @course = @user.courses.new %>
      <%= render :partial => "courses/form" %>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  function replace_new_course_form(html){
    $("#new_course_container").html(html);

  }
</script>
